<h1>Sign In</h1>

<%= form_for(:session, url: sign_in_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <%= link_to "forgot password?", new_password_reset_path %>
  </div>
  <div class="form-group">
    <%= f.submit "Sign In", class: "btn btn-success" %>
  </div>
<% end %>
