<!DOCTYPE html>
<html>
  <head>
    <title>Blocitoff</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo"><%= image_tag("blocitoff_logo.png") %></a>
      <ul class="links-container">
        <% if logged_in? %>
          <li class="navbar-link"><%= link_to "Sign Out", sign_out_path, method: "delete" %></li>
        <% else %>
          <li class="navbar-link"><%= link_to "Sign In", sign_in_path %></li>
          <li class="navbar-link"><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
      </ul>
    </nav>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
    <%= debug(params) if Rails.env.development? %>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">An educational project by <a href="http://www.natepauzenga.com">Nate Pauzenga</a></p>
      </div>
    </footer>
  </body>
</html>
